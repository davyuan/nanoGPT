{
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 8,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 6e-4,
            "betas": [0.9, 0.95],
            "eps": 1e-8,
            "weight_decay": 1e-1
        }
    },
    "lr_scheduler": {
        "type": "WarmupCosineLR",
        "params": {
        "warmup_min_lr": 6e-5,
        "warmup_max_lr": 6e-4,
        "warmup_num_steps": 2000,
        "total_num_steps": 600000
        }
    },
    "zero_optimization": {
        "stage": 3,
        "reduce_scatter": true,
        "reduce_bucket_size": 50000000,
        "allgather_bucket_size": 50000000,
        "overlap_comm": true,
        "contiguous_gradients": true,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true,
            "buffer_count": 4,
            "fast_init": false
        },
        "offload_param": {
            "device": "cpu",
            "pin_memory": true,
            "buffer_count": 5,
            "buffer_size": 250000000,
            "max_in_cpu": 500000000
        },
        "stage3_prefetch_bucket_size": 25000000,
        "stage3_param_persistence_threshold": 50000,
        "stage3_max_live_parameters": 500000,
        "stage3_max_reuse_distance": 500000,
        "stage3_gather_16bit_weights_on_model_save": false
    },
    "gradient_clipping": 1.0,
    "fp16": {
        "enabled": false
    },
    "bf16": {
        "enabled": true
    },
    "activation_checkpointing": {
        "partition_activations": true,
        "cpu_checkpointing": true,
        "contiguous_memory_optimization": true,
        "number_checkpoints": 1,
        "synchronize_checkpoint_boundary": true,
        "profile": false
    },
    "wall_clock_breakdown": false,
    "steps_per_print": 10000
}
